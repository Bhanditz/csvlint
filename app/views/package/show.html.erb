<% content_for :title do %>
  <%= t(:package_results).titleize %>
<% end %>

<div class="alert alert-success">
  <%= t(:package_notice, type: @dataset.publishing_format).html_safe %>
</div>

<table class="table">
  <thead>
    <tr>
      <th>File URL</th>
      <th>Status</th>
      <th></th>
    </tr>
  </thead>
  <tbody>
    <% @validations.each do |validation| %>
      <%= render 'validation/validation', validation: validation %>
    <% end %>
  </tbody>
</table>

<div class="text-center">
  <%= paginate @validations, :theme => 'twitter-bootstrap-3' %>
</div>