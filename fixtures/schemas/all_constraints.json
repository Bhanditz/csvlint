        "required": true,
        "unique": true,
        "minLength": 5,
        "maxLength": 10,
        "pattern": "^[A-Za-z0-9_]*$"
      }
    },
    {
      "name": "Age",
      "constraints": {
        "type": "http://www.w3.org/2001/XMLSchema#nonNegativeInteger",
        "minimum": "13",
        "maximum": "99"
      }
    },
    {
      "name": "Height",
      "constraints": {
        "minimum": "20"
      }
    },
    {
      "name": "Weight",
      "constraints": {
        "maximum": "500"
      }
    },
    {
      "name": "Password"
    },
    {
      "name": "Email"
    }    
  ]
}